@import '../variables/variables.styl'
@import '../blocks/base/header/header.styl'
@import '../blocks/base/footer/footer.styl'
@import 'container.styl'

*
  margin 0
  padding 0
  // border: 1px solid red

body
  background-color #DFDFDF
  // overflow-x hidden

p, a, h1, h2, h3
  font-family Graphik LCG
  font-style normal

p, a
  font-weight normal
  font-size 19px
  line-height 30px

a
  text-decoration none

h1, h2, h3
  font-weight 500

h1
  font-size 75px
  line-height 75px
  color primary
  text-align center
  letter-spacing -0.01em

h2
  font-size 63px
  line-height 70px
  color #242424
h3
  font-size 42px
  line-height 50px
  color #000000

img
  margin 45px 0 0 0
  width 100%

@media (max-width: 1200px)
  p, a
    font-size 15px
    line-height 30px
  h2
    font-size 45px
    line-height 50px
  h3
    font-size 32px
    line-height 40px

@media (max-width: 960px)
  p, a
    font-size 14px
    line-height 20px
  h1
    font-size 42px
    line-height 45px
  h2
    font-size 29px
    line-height 30px
  h3
    font-size 19px
    line-height 20px


// Common


.svg-color
  filter primaryFilter

.circle
  width 80px
  height 80px
  border-radius 50%

  display flex
  align-items center
  justify-content center
  border 1px solid primary

.circle-sub
  font-weight 600
  font-size 12px
  line-height 15px
  text-transform uppercase
  color primary

  width 139.33px
  height 89.57px
  left 420px
  top 30px

  border 1px solid primary
  border-radius 110px/70px

  display flex
  align-items center
  justify-content center

@media (max-width: 1200px)
  .circle
    width 70px
    height 70px

@media (max-width: 960px)
  .circle
    width 50px
    height 50px


.block2-description, p.block4-description
  font-weight 500
  text-transform uppercase
  color primary

.block5, .block6, .block7
  display flex
  align-items center
  justify-content center

.block5, .block6
  flex-direction column


// Block 1


.block1
  margin-top 90px
  display: flex;
  flex-direction: column;

  &-events
    display flex
    justify-content space-between
    overflow auto
    margin-top 60px

    overflow -moz-scrollbars-none

    &::-webkit-scrollbar
      width 0

    &-event
      position relative
      padding 0
      color primary
      border 1px solid primary
      min-width 260px
      border-width 0 1px 1px 0
      margin-top: 2px;

      &:last-child
        margin-right 0

      // &:last-child:before
      //   content ""
      //   width 0
      //   height 0
      //   left 100%
      //   top 60px
      //   position absolute
      //   border-top 15px solid transparent
      //   border-left 9px solid primary
      //   border-bottom 15px solid transparent

      &-title
        font-weight 500
        font-size 12px
        line-height 15px
        text-transform uppercase
        margin-top -2px

      &-text
        width 240px
        margin-top 26px
        margin-bottom 21px

      &-open
        position absolute
        top 0
        right 20px

// Block 2


.block2
  margin-top 175px
  
  &-description
    margin-top 35px
    margin-bottom 80px

  &-elements

    &-element
      border 1px solid primary
      border-width 1px 0 0 0
      display flex

      padding-top 33px
      padding-bottom 37px

      &-circle
        background-color primary

        font-weight 600
        font-size 12px
        line-height 75px
        color #FFFFFF

      &-text
        font-size 41px
        line-height 50px

      &-text span
        color primary


// Block 3


.block3
  margin-top 183px

  & svg
    height 14px
    width 14px

  &-header
    display flex

  &-open
    font-weight 500
    color primary
    flex-direction column
    margin-top 34px
  
  &-courses
    margin-top 75px

    &-course
      display flex
      width 100%
      height 80px
      background linear-gradient(180deg, #DFDFDF 0%, #E7E7E7 100%)

      & .container
        display flex
        align-items center

      &-icon
        justify-content flex-start

      &-title
        font-weight normal
        font-size 42px
        line-height 39px

      &-number
        display flex
        font-weight 500
        justify-content flex-end


// Block 4


.block4
  margin-top 185px

  &-description
    margin-top 35px

  &-elements
    display flex
    justify-content flex-end
    flex-direction column
    align-items flex-end
    margin-top -9px

    &-grid
      border 1px solid primary
      border-width 1px 0 0 0
      display flex
      padding-top 14px
      margin-bottom 50px

    &-element
      &-title
        font-weight 500
        line-height 40px
        margin-bottom 10px

      &:last-child
        margin-right 0

