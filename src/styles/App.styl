// Block 6


.block6
  margin-top 183px

  &-description
    margin-top 37px

  &-form
    margin-top 20px

    & input
      font-weight: 600
      font-size: 12px
      line-height: 15px
      letter-spacing 0.03em
      text-transform uppercase

      color primary
      background-color #DFDFDF 
      border 1px solid primary
      border-width 0 0 1px 0

      width 100%
      margin-bottom 31px
      padding-bottom 16px

      outline none

    & input::-webkit-input-placeholder
      color:primary
    & input::-moz-placeholder
      color:primary
    & input:-moz-placeholder 
      color:primary


// Block 7


.block7
  margin-top 50px
  margin-bottom 105px
  align-items flex-end

  &-elements
    justify-content space-between
    align-items flex-end

    &-text
      font-weight: normal
      font-size: 12px
      line-height: 15px

    &-text span
      color:primary


