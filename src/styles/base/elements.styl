.svg-color
    filter primaryFilter

.svg-expansion
    width 14px
    height 14px

.circle
    width 80px
    height 80px
    border-radius 50%

    display flex
    align-items center
    justify-content center
    border 1px solid primary

.circle_small
    width 60px
    height 60px

.circle-sub
    font-weight 600
    font-size 12px
    line-height 15px
    text-transform uppercase
    color primary

    width 140px
    height 90px
    left 420px
    top 30px

    border 1px solid primary
    border-radius 110px/70px

    display flex
    align-items center
    justify-content center

@media (max-width: 1200px)
    .svg-expansion
        width 9.33px
        height 9.33px

    .circle
    .circle_small
        width 70px
        height 70px
    .circle-sub
        font-size 9px
        line-height 12px

        width 110px
        height 70px

@media (max-width: 960px)
    .circle
    .circle_small
        width 50px
        height 50px
    .circle-sub
        font-size 9px
        line-height 12px

        width 100px
        height 60px

@media (max-width: 640px)
    .svg-expansion
        width 10px
        height 10px
    .circle
        width 90px
        height 90px
    .circle_small
        width 45px
        height 45px
    .circle-sub
        font-size 12px
        line-height 15px

        width 135px
        height 90px