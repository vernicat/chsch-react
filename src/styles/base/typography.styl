h1, h2, h3, p, a
  font-family Graphik LCG
  font-style normal

h1, h2, h3
  font-weight 500

h1
  font-size 75px
  line-height 70px
  color primary
  text-align center
  letter-spacing -0.01em

h2
  font-size 63px
  line-height 70px
  color secondary
h3
  font-size 42px
  line-height 50px
  color tertiaryColor

p, a
  font-weight normal
  font-size 19px
  line-height 30px

a
  text-decoration none

@media (max-width: 1200px)
  h1
    font-size 42px
    line-height 45px
  h2
    font-size 45px
    line-height 60px
  h3
    font-size 33px
    line-height 40px
  p, a
    font-size 15px
    line-height 20px


@media (max-width: 960px)
  h1
    font-size 42px
    line-height 45px
  h2
    font-size 29px
    line-height 30px
  h3
    font-size 19px
    line-height 20px
  p, a
    font-size 14px
    line-height 20px


@media (max-width: 640px)
  h1
    font-size 63px
    line-height 60px
    text-align start
  h2, h3
    font-size 42px
    line-height 45px
  p, a
    font-size 21px
    line-height 30px


