.header
    padding 20px 0

    & .container
        display flex
    &-logo
        font-weight 600
        text-transform uppercase
        color primary

    &-nav
        &-link
            & a
                color tertiaryColor
            &_active
                display flex
                align-items center
                justify-content flex-start

                & a
                    color primary
                    margin-left 10px
                    white-space: nowrap
                &-line
                    border 1px solid primary
                    width 100%
                    max-width 150px
                    height 0px
                    border-width 1px 0 0 0
    &-menu-link
        display none

.menu
    display none

@media (min-width 641px)
    body
        overflow auto !important
    .menu
        display none !important

@media (max-width 640px)
    .header
        padding 38px 0 7px 0

        &-sub.circle-sub
            display none
        &-nav
            display none
        &-menu-link
            display block
            color primary
            font-weight 500
            font-size 21px
            line-height 30px


    .menu
        display none
        background primary
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        z-index 999
        overflow auto

        & .container
            display flex
            flex-direction column
            justify-content space-between
            height 100%
            max-height 812px

        &-header
            &-top
                display flex
                justify-content space-between

            &-close
                font-weight 500
                font-size 21px
                line-height 30px

                text-transform capitalize

        & .header-nav
            display block
            margin-top 40px

            &-link
                &
                &_active
                    padding 0

                & a
                &_active a
                    display block
                    font-weight 500
                    font-size 42px
                    line-height 75px
                    letter-spacing -0.01em
                    padding 5px 0 10px 0
                    border-bottom 1px solid #FFFFFF
                    margin 0
                    width 100%
                    pointer-events: auto

                &_active-line
                    display none

                &:nth-child(4) a
                &_active:nth-child(4) a
                    border-bottom 0


        & .header-logo
        & .menu-header-close
        & .header-nav-link a
        & .header-nav-link_active a
            color #FFFFFF

        & .footer
            display block
            height 100%
            padding 0
            margin 0

            & p, a
                font-size 12px
                line-height 30px
                text-transform uppercase

            & .grid
                flex-direction column
                height 100%
                justify-content space-between
                padding-bottom 38px
                box-sizing border-box

                & .grid__column_size_4
                    &:nth-child(2)
                        width 100%
                    &:nth-child(3)
                        margin-top 15px

                & .footer-address
                    line-height 15px

                & .footer-privacy
                    margin-top 20px

                & .footer-social
                    margin-top 80px
                    justify-content space-around