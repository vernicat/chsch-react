.header
    padding 20px 0

    & .container
        display flex
    &-logo
        font-weight 600
        font-size 19px
        line-height 30px
        text-transform uppercase
        color primary

    &-nav
        &-link
            & a
                color #000000
            &_active 
                display flex
                align-items center
                justify-content flex-start

                & a
                    // text-align right
                    color primary
                    margin-left 10px
                    pointer-events none
                &-line
                    border 1px solid primary
                    width 100%
                    max-width 150px
                    height 0px      
                    border-width 1px 0 0 0


        // &-link_active a
            // position absolute
            // width 180px
            // height 0px
            // left 720px
            // top 95px

        // &-link_active ~ .line
        //     border 1px solid primary
        //     border-width 0 0 0 1px
        //     transform rotate(90deg)


    &-menu
        display none
        background primary
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        width 100%
        padding 0 15px 0 15px

        &-link
            display none
            font-weight 500
            font-size 21px
            line-height 30px
            text-align right
            text-transform capitalize
            color primary
        &-chancel
            font-weight 500
            font-size 21px
            line-height 30px

            text-transform capitalize

        & .header-logo,
        & .header-nav-link,
        & .header-nav-link_active,
        &-chancel
            color #FFFFFF

@media (max-width 640px)
    .header
        padding 38px 0 7px 0

        &-sub.circle-sub
            display none
        &-nav
            display none
        &-menu-link
            display block

